const N = 2     // Cantidad de frecuencias
range F = 0..N  // Rango de frecuencias

// Apenas la prendo, se sintoniza en la frecuencia m치s alta
RADIO = (on->FREQ[N]),
FREQ[i:F] = (
    // Cuando se apreta el bot칩n reset, se sintoniza en la frecuencia m치s alta
    reset->FREQ[N]
    // Cuando se apreta el bot칩n scan, empieza a escanear para abajo
    |scan->SCANNING[i]
    |off->RADIO
),
SCANNING[i:F] = (
    when (i>0) scanning->SCANNING[i-1]
    |lock->FREQ[i]
).